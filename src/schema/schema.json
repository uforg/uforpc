{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "procedures"
  ],
  "properties": {
    "types": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Type"
      }
    },
    "procedures": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/Procedure"
      }
    }
  },
  "definitions": {
    "FieldDefinition": {
      "type": "object",
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^(string|number|float|boolean|object|.*\\[\\]|[A-Z][a-zA-Z0-9]*)$"
        },
        "desc": {
          "type": "string"
        },
        "fields": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/Field"
          }
        }
      }
    },
    "Field": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(string|number|float|boolean|object|.*\\[\\]|[A-Z][a-zA-Z0-9]*)$"
        },
        {
          "$ref": "#/definitions/FieldDefinition"
        }
      ]
    },
    "Type": {
      "type": "object",
      "required": [
        "name",
        "fields"
      ],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[A-Z][a-zA-Z0-9]*$"
        },
        "desc": {
          "type": "string"
        },
        "fields": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/Field"
          }
        }
      }
    },
    "Procedure": {
      "type": "object",
      "required": [
        "name",
        "type"
      ],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[A-Z][a-zA-Z0-9]*$"
        },
        "type": {
          "type": "string",
          "enum": [
            "query",
            "mutation"
          ]
        },
        "desc": {
          "type": "string"
        },
        "input": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/Field"
          }
        },
        "output": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/Field"
          }
        },
        "meta": {
          "type": "object",
          "additionalProperties": {
            "type": ["string", "number", "boolean"]
          }
        }
      }
    }
  }
}
