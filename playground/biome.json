{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "*.css",
      "node_modules",
      "dist",
      "build",
      ".svelte-kit",
      "src/lib/urpcTypes.ts",
      "static/urpc/wasm_exec.js"
    ]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "ignore": ["*.test.ts"],
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  }
}
