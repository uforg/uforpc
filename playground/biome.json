{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/*.css",
      "!**/*.svelte",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/.svelte-kit",
      "!**/src/lib/urpcTypes.ts",
      "!**/static/urpc/wasm_exec.js"
    ]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "includes": ["**", "!**/*.test.ts"],
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      }
    }
  }
}
