{
  "version": 1,
  "types": {
    "ApiSettings": {
      "type": "object",
      "fields": {
        "endpoint": {
          "type": "string",
          "rules": {
            "regex": {
              "value": "^https?://.*$",
              "errorMessage": "Must be a valid URL"
            }
          }
        },
        "timeout": {
          "type": "int",
          "rules": {
            "min": {
              "value": 100,
              "errorMessage": "Timeout must be at least 100ms"
            }
          }
        }
      }
    }
  },
  "procedures": {
    "ConfigureApi": {
      "type": "mutation",
      "description": "Actualiza la configuraci√≥n de la API",
      "input": {
        "type": "ApiSettings"
      },
      "output": {
        "type": "boolean"
      },
      "meta": {
        "requiresAdmin": true,
        "rateLimit": 10,
        "cacheDuration": 300,
        "version": "2.0.0"
      }
    }
  }
}
