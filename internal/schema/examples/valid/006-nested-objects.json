{
  "version": 1,
  "types": {
    "Address": {
      "type": "object",
      "fields": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "zipCode": {
          "type": "string",
          "rules": {
            "regex": {
              "value": "^\\d{5}$",
              "errorMessage": "Must be a 5-digit zip code"
            }
          }
        }
      }
    },
    "Contact": {
      "type": "object",
      "fields": {
        "email": {
          "type": "string",
          "rules": {
            "email": {
              "errorMessage": "Must be a valid email"
            }
          }
        },
        "phone": {
          "type": "string",
          "rules": {
            "regex": {
              "value": "^\\+?[0-9]{10,15}$",
              "errorMessage": "Must be a valid phone number"
            }
          }
        }
      }
    },
    "Person": {
      "type": "object",
      "fields": {
        "name": {
          "type": "string"
        },
        "age": {
          "type": "int",
          "rules": {
            "min": {
              "value": 0,
              "errorMessage": "Age cannot be negative"
            }
          }
        },
        "address": {
          "type": "Address"
        },
        "contact": {
          "type": "Contact"
        },
        "tags": {
          "type": "array",
          "arrayType": {
            "type": "string"
          }
        },
        "nested": {
          "type": "object",
          "fields": {
            "nestedField": {
              "type": "object",
              "fields": {
                "nestedNestedField": {
                  "type": "object",
                  "fields": {
                    "nestedNestedNestedField": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "procedures": {
    "CreatePerson": {
      "type": "mutation",
      "input": {
        "type": "Person"
      },
      "output": {
        "type": "boolean"
      }
    }
  }
}
