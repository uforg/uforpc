{
  "version": 1,
  "types": {
    "Address": {
      "type": "object",
      "fields": {
        "street": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "zipCode": {
          "type": "string"
        },
        "country": {
          "type": "string"
        }
      }
    },
    "Contact": {
      "type": "object",
      "fields": {
        "email": {
          "type": "string",
          "rules": {
            "email": {
              "errorMessage": "Must be a valid email"
            }
          }
        },
        "phone": {
          "type": "string",
          "rules": {
            "optional": true
          }
        }
      }
    },
    "Customer": {
      "type": "object",
      "fields": {
        "id": {
          "type": "string",
          "rules": {
            "uuid": {
              "errorMessage": "Must be a valid UUID"
            }
          }
        },
        "name": {
          "type": "string"
        },
        "address": {
          "type": "Address"
        },
        "contact": {
          "type": "Contact"
        }
      }
    }
  },
  "procedures": {
    "GetCustomer": {
      "type": "query",
      "input": {
        "type": "object",
        "fields": {
          "id": {
            "type": "string",
            "rules": {
              "uuid": {
                "errorMessage": "Must be a valid UUID"
              }
            }
          }
        }
      },
      "output": {
        "type": "Customer"
      }
    }
  }
}
