{
  "version": 1,
  "types": {
    "MultipleStringValidations": {
      "type": "object",
      "fields": {
        "code": {
          "type": "string",
          "rules": {
            "minLen": {
              "value": 8,
              "errorMessage": "Code must be at least 8 characters"
            },
            "maxLen": {
              "value": 16,
              "errorMessage": "Code cannot be longer than 16 characters"
            },
            "uppercase": {
              "errorMessage": "Code must be in uppercase"
            },
            "regex": {
              "value": "^[A-Z0-9]+$",
              "errorMessage": "Code must contain only uppercase letters and numbers"
            }
          }
        }
      }
    }
  },
  "procedures": {
    "ValidateCode": {
      "type": "query",
      "input": {
        "type": "MultipleStringValidations"
      },
      "output": {
        "type": "boolean"
      }
    }
  }
}
