{
  "version": 1,
  "types": {
    "User": {
      "type": "object",
      "fields": {
        "id": {
          "type": "string",
          "rules": {
            "uuid": {
              "errorMessage": "Must be a valid UUID"
            }
          }
        },
        "name": {
          "type": "string",
          "rules": {
            "minLen": {
              "value": 3,
              "errorMessage": "Minimum 3 characters"
            },
            "maxLen": {
              "value": 30,
              "errorMessage": "Maximum 30 characters"
            }
          }
        },
        "age": {
          "type": "int",
          "rules": {
            "min": {
              "value": 18,
              "errorMessage": "Age required to be over 18"
            }
          }
        },
        "preferences": {
          "type": "CustomSettings",
          "description": "User's custom settings"
        }
      }
    },
    "CustomSettings": {
      "type": "object",
      "fields": {
        "theme": {
          "type": "string",
          "rules": {
            "enum": {
              "values": ["light", "dark"],
              "errorMessage": "Invalid theme"
            }
          }
        },
        "qty": {
          "type": "int",
          "rules": {
            "min": {
              "value": 1,
              "errorMessage": "Minimum 1"
            },
            "max": {
              "value": 10,
              "errorMessage": "Maximum 10"
            },
            "enum": {
              "values": [1, 2, 3, 5, 8, 13],
              "errorMessage": "Value not allowed"
            }
          }
        }
      }
    }
  },
  "procedures": {
    "CreateUser": {
      "type": "mutation",
      "description": "Creates a new user",
      "input": {
        "type": "User",
        "rules": {
          "optional": {
            "errorMessage": "Invalid data"
          }
        }
      },
      "output": {
        "type": "boolean"
      },
      "meta": {
        "audit": true,
        "retryCount": 3
      }
    },
    "GetUserProfile": {
      "type": "query",
      "input": {
        "type": "string",
        "rules": {
          "regex": {
            "pattern": "^[a-f\\d]{24}$",
            "errorMessage": "Invalid ID"
          }
        }
      },
      "output": {
        "type": "User"
      }
    }
  }
}
