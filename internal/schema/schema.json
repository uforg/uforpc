{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "types",
    "procedures"
  ],
  "properties": {
    "version": {
      "const": 1
    },
    "types": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/field"
      }
    },
    "procedures": {
      "type": "object",
      "patternProperties": {
        "^[A-Z][a-zA-Z0-9]*$": {
          "$ref": "#/$defs/procedure"
        }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "ruleBoolean": {
      "type": "boolean"
    },
    "ruleSimple": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "errorMessage": { "type": "string" }
      }
    },
    "ruleWithStringValue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["value"],
      "properties": {
        "value": { "type": "string" },
        "errorMessage": { "type": "string" }
      }
    },
    "ruleWithIntValue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["value"],
      "properties": {
        "value": { "type": "integer" },
        "errorMessage": { "type": "string" }
      }
    },
    "ruleWithNumberValue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["value"],
      "properties": {
        "value": { "type": "number" },
        "errorMessage": { "type": "string" }
      }
    },
    "ruleWithBooleanValue": {
      "type": "object",
      "additionalProperties": false,
      "required": ["value"],
      "properties": {
        "value": { "type": "boolean" },
        "errorMessage": { "type": "string" }
      }
    },
    "ruleWithStringArray": {
      "type": "object",
      "additionalProperties": false,
      "required": ["values"],
      "properties": {
        "values": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "errorMessage": { "type": "string" }
      }
    },
    "ruleWithIntArray": {
      "type": "object",
      "additionalProperties": false,
      "required": ["values"],
      "properties": {
        "values": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "integer" }
        },
        "errorMessage": { "type": "string" }
      }
    },
    "ruleWithNumberArray": {
      "type": "object",
      "additionalProperties": false,
      "required": ["values"],
      "properties": {
        "values": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "number" }
        },
        "errorMessage": { "type": "string" }
      }
    },
    "stringRules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "optional": { "$ref": "#/$defs/ruleBoolean" },
        "equals": { "$ref": "#/$defs/ruleWithStringValue" },
        "contains": { "$ref": "#/$defs/ruleWithStringValue" },
        "regex": { "$ref": "#/$defs/ruleWithStringValue" },
        "minLen": { "$ref": "#/$defs/ruleWithIntValue" },
        "maxLen": { "$ref": "#/$defs/ruleWithIntValue" },
        "enum": { "$ref": "#/$defs/ruleWithStringArray" },
        "email": { "$ref": "#/$defs/ruleSimple" },
        "iso8601": { "$ref": "#/$defs/ruleSimple" },
        "uuid": { "$ref": "#/$defs/ruleSimple" },
        "json": { "$ref": "#/$defs/ruleSimple" },
        "lowercase": { "$ref": "#/$defs/ruleSimple" },
        "uppercase": { "$ref": "#/$defs/ruleSimple" }
      }
    },
    "intRules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "optional": { "$ref": "#/$defs/ruleBoolean" },
        "equals": { "$ref": "#/$defs/ruleWithIntValue" },
        "min": { "$ref": "#/$defs/ruleWithIntValue" },
        "max": { "$ref": "#/$defs/ruleWithIntValue" },
        "enum": { "$ref": "#/$defs/ruleWithIntArray" }
      }
    },
    "floatRules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "optional": { "$ref": "#/$defs/ruleBoolean" },
        "equals": { "$ref": "#/$defs/ruleWithNumberValue" },
        "min": { "$ref": "#/$defs/ruleWithNumberValue" },
        "max": { "$ref": "#/$defs/ruleWithNumberValue" },
        "enum": { "$ref": "#/$defs/ruleWithNumberArray" }
      }
    },
    "booleanRules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "optional": { "$ref": "#/$defs/ruleBoolean" },
        "equals": { "$ref": "#/$defs/ruleWithBooleanValue" }
      }
    },
    "objectRules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "optional": { "$ref": "#/$defs/ruleBoolean" }
      }
    },
    "arrayRules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "optional": { "$ref": "#/$defs/ruleBoolean" },
        "minLen": { "$ref": "#/$defs/ruleWithIntValue" },
        "maxLen": { "$ref": "#/$defs/ruleWithIntValue" }
      }
    },
    "customTypeRules": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "optional": { "$ref": "#/$defs/ruleBoolean" }
      }
    },
    "field": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "type": "string",
          "anyOf": [
            {
              "enum": [
                "string",
                "int",
                "float",
                "boolean",
                "object",
                "array"
              ]
            },
            { "pattern": "^[A-Z][a-zA-Z0-9]*$" }
          ]
        },
        "description": {
          "type": "string"
        },
        "rules": {
          "type": "object"
        },
        "fields": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/field"
          }
        },
        "arrayType": {
          "$ref": "#/$defs/field"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "object"
              }
            }
          },
          "then": {
            "required": [
              "fields"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "array"
              }
            }
          },
          "then": {
            "required": [
              "arrayType"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "string"
              }
            }
          },
          "then": {
            "properties": {
              "rules": {
                "$ref": "#/$defs/stringRules"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "int"
              }
            }
          },
          "then": {
            "properties": {
              "rules": {
                "$ref": "#/$defs/intRules"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "float"
              }
            }
          },
          "then": {
            "properties": {
              "rules": {
                "$ref": "#/$defs/floatRules"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "boolean"
              }
            }
          },
          "then": {
            "properties": {
              "rules": {
                "$ref": "#/$defs/booleanRules"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "object"
              }
            }
          },
          "then": {
            "properties": {
              "rules": {
                "$ref": "#/$defs/objectRules"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "array"
              }
            }
          },
          "then": {
            "properties": {
              "rules": {
                "$ref": "#/$defs/arrayRules"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "pattern": "^[A-Z][a-zA-Z0-9]*$"
              }
            }
          },
          "then": {
            "properties": {
              "rules": {
                "$ref": "#/$defs/customTypeRules"
              }
            }
          }
        }
      ]
    },
    "procedure": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type"
      ],
      "properties": {
        "type": {
          "enum": [
            "query",
            "mutation"
          ]
        },
        "description": {
          "type": "string"
        },
        "input": {
          "$ref": "#/$defs/field"
        },
        "output": {
          "$ref": "#/$defs/field"
        },
        "meta": {
          "type": "object",
          "additionalProperties": {
            "type": [
              "string",
              "number",
              "boolean"
            ]
          }
        }
      }
    }
  }
}
