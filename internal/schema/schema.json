{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "types", "procedures"],
  "properties": {
    "version": { "const": 1 },
    "types": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/field"
      }
    },
    "procedures": {
      "type": "object",
      "patternProperties": {
        "^[A-Z][a-zA-Z0-9]*$": {
          "$ref": "#/$defs/procedure"
        }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "field": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "anyOf": [
            {
              "enum": ["string", "int", "float", "boolean", "object", "array"]
            },
            { "pattern": "^[A-Z][a-zA-Z0-9]*$" }
          ]
        },
        "description": {
          "type": "string"
        },
        "rules": {
          "type": "object",
          "properties": {
            "optional": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "errorMessage": { "type": "string" }
              }
            }
          },
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": { "const": "string" }
                }
              },
              "then": {
                "properties": {
                  "equals": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "string" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "contains": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "string" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "regex": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["pattern"],
                    "properties": {
                      "pattern": { "type": "string" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "minLen": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "integer" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "maxLen": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "integer" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "enum": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["values"],
                    "properties": {
                      "values": {
                        "type": "array",
                        "items": { "type": "string" },
                        "minItems": 1
                      },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "email": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "iso8601": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "uuid": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "json": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "lowercase": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "uppercase": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "errorMessage": { "type": "string" }
                    }
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": { "const": "int" }
                }
              },
              "then": {
                "properties": {
                  "equals": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "integer" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "min": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "integer" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "max": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "integer" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "enum": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["values"],
                    "properties": {
                      "values": {
                        "type": "array",
                        "items": { "type": "integer" },
                        "minItems": 1
                      },
                      "errorMessage": { "type": "string" }
                    }
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": { "const": "float" }
                }
              },
              "then": {
                "properties": {
                  "equals": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "number" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "min": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "number" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "max": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "number" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "enum": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["values"],
                    "properties": {
                      "values": {
                        "type": "array",
                        "items": { "type": "number" },
                        "minItems": 1
                      },
                      "errorMessage": { "type": "string" }
                    }
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": { "const": "boolean" }
                }
              },
              "then": {
                "properties": {
                  "equals": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "boolean" },
                      "errorMessage": { "type": "string" }
                    }
                  }
                }
              }
            },
            {
              "if": {
                "properties": {
                  "type": { "const": "array" }
                }
              },
              "then": {
                "properties": {
                  "contains": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "object" },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "minLen": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "integer", "minimum": 0 },
                      "errorMessage": { "type": "string" }
                    }
                  },
                  "maxLen": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["value"],
                    "properties": {
                      "value": { "type": "integer", "minimum": 0 },
                      "errorMessage": { "type": "string" }
                    }
                  }
                }
              }
            }
          ]
        },
        "fields": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/field"
          }
        },
        "arrayType": {
          "type": "object",
          "$ref": "#/$defs/field"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": { "const": "object" }
            },
            "required": ["type"]
          },
          "then": {
            "required": ["fields"]
          }
        },
        {
          "if": {
            "properties": {
              "type": { "const": "array" }
            },
            "required": ["type"]
          },
          "then": {
            "required": ["arrayType"]
          }
        }
      ]
    },
    "procedure": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type"],
      "properties": {
        "type": {
          "enum": ["query", "mutation"]
        },
        "description": {
          "type": "string"
        },
        "input": {
          "$ref": "#/$defs/field"
        },
        "output": {
          "$ref": "#/$defs/field"
        },
        "meta": {
          "type": "object",
          "additionalProperties": {
            "type": ["string", "number", "boolean"]
          }
        }
      }
    }
  }
}
