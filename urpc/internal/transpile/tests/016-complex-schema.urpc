version 1

"""API for managing a blog platform"""

rule @minLength {
  for: string
  param: int
  error: "String must be at least the specified length"
}

rule @maxLength {
  for: string
  param: int
  error: "String cannot exceed the specified length"
}

rule @slug {
  for: string
  param: string
  error: "Invalid slug format"
}

rule @tags {
  for: string
  param: int
  error: "Too many tags"
}

"""Represents a blog post"""
type BlogPost {
  id: string
    @minLength(36)
    @maxLength(36)
  title: string
    @minLength(5)
    @maxLength(100)
  slug: string
    @slug("^[a-z0-9-]+$")
  content: string
    @minLength(10)
  publishedAt: datetime
  author: {
    id: string
    name: string
    email: string
  }
  tags: string[]
    @tags(5)
  isPublished: bool
}

"""Creates a new blog post"""
proc CreatePost {
  input {
    title: string
      @minLength(5)
      @maxLength(100)
    content: string
      @minLength(10)
    tags: string[]
      @tags(5)
  }

  output {
    post: BlogPost
    success: bool
  }

  meta {
    auth: true
    role: "author"
  }
}

"""Retrieves a blog post by its ID or slug"""
proc GetPost {
  input {
    idOrSlug: string
  }

  output {
    post?: BlogPost
    found: bool
  }
}
